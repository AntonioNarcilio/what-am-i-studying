{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
    "plugin:react/recommended",
    "airbnb",
    "airbnb-typescript"
  ],
	"parser":
    "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module",
    "project": ["./tsconfig.json"]
	},
	"plugins": [
    "react",
    "@typescript-eslint"
  ],
	"rules": {
    "no-restricted-exports": "off",
		"react/jsx-filename-extension": [
			1,
			{
				"extensions": [".ts", ".tsx"]
			}
		],
    "no-use-before-define": "off",
    "import/no-unresolved": "off",
		"react/react-in-jsx-scope": "off",
		"global-require": "off",
		"import/prefer-default-export": "off",
    "prefer-const": "off",
		"no-unused-expressions": [
			"error",
			{
				"allowTaggedTemplates": true
			}
		],
    "import/no-webpack-loader-syntax": "off",
		"import/extensions": [
			0,
			"ignorePackages",
			{
				"js": "never",
				"jsx": "never",
				"mjs": "never",
				"ts": "never",
				"tsx": "never"
			}
		]
	},
	"settings": {
		"import/resolver": {
			"node": {
				"extensions": [
          ".js",
          ".jsx",
          ".ts",
          ".tsx",
          ".json"
        ]
			}
		}
	}
}
